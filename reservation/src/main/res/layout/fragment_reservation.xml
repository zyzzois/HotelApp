<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/gray"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/buttonBack"
                android:src="@drawable/ic_navigate_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/button_navigate_back_description" />
            <TextView
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center"
                android:fontFamily="@font/sf_pro_display_medium"
                android:layout_marginEnd="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reservation_title"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="18dp"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/gold_background"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:paddingHorizontal="9dp"
                    android:text="@string/rating_text"
                    android:textColor="@color/gold"
                    android:textSize="16sp"
                    app:cornerRadius="6dp"
                    app:icon="@drawable/ic_rating_star"
                    app:iconTint="@color/gold" />


                <TextView
                    android:id="@+id/tvHotelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:text="@string/hotel_name_text"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tvHotelLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:text="@string/hotel_location_text"
                    android:textColor="@color/blue"
                    android:textSize="14sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_margin="12sp"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="match_parent"
                android:layout_marginBottom="18dp"
                android:orientation="vertical"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:layout_height="wrap_content"
                        android:text="@string/departure_title" />

                    <TextView
                        android:textSize="16sp"
                        android:id="@+id/tvDeparture"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/departure_sample" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:layout_height="wrap_content"
                        android:text="@string/arrival_title" />
                    <TextView
                        android:textSize="16sp"
                        android:id="@+id/tvArrival"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/arrival_sample" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:layout_height="wrap_content"
                        android:text="@string/trip_date_title"/>
                    <TextView
                        android:textSize="16sp"
                        android:id="@+id/tvTripDate"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="@string/trip_date_sample"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:layout_height="wrap_content"
                        android:text="@string/nights_number_title"/>
                    <TextView
                        android:textSize="16sp"
                        android:id="@+id/tvNightsNumber"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:layout_height="wrap_content"
                        android:text="@string/nights_number_sample"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/hotel_name_title"/>
                    <TextView
                        android:textSize="16sp"
                        android:id="@+id/tvHotelNameSecond"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="@string/hotel_name_sample"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:layout_height="wrap_content"
                        android:text="@string/apartment_title"/>
                    <TextView
                        android:textSize="16sp"
                        android:id="@+id/tvHotelDescription"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="@string/apartment_description_sample"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:layout_height="wrap_content"
                        android:text="@string/nutrition_title"/>
                    <TextView
                        android:textSize="16sp"
                        android:id="@+id/tvNutrition"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="@string/nutrition_sample"/>
                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_margin="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="@string/Ñustomer_info_title"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:textSize="22sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNumber"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    android:background="@drawable/rounded_background"
                    app:boxCornerRadiusTopStart="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/light_gray_hint"
                        android:hint="@string/phone_number_hint"
                        android:inputType="phone" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilMail"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    android:background="@drawable/rounded_background">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editMail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/light_gray_hint"
                        android:hint="@string/mail_hint"
                        android:inputType="textEmailAddress" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:text="@string/private_credentials_description"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/touristList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_margin="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:text="@string/add_tourist"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/buttonAddTourist"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_add"
                    android:background="@drawable/rounded_background_button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:contentDescription="@string/add_new_tourist_content_description"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_margin="12sp"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="match_parent"
                android:layout_marginBottom="18dp"
                android:orientation="vertical"
                android:baselineAligned="false">

                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/tour_price"/>
                    <TextView
                        android:id="@+id/tvTripPrice"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="@string/trip_price_sample"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/fuel_surcharge"/>
                    <TextView
                        android:id="@+id/tvFuelCharge"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="@string/price_sample"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/service_fee"/>
                    <TextView
                        android:id="@+id/tvServiceFee"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="@string/price_sample"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/to_pay"/>
                    <TextView
                        android:id="@+id/tvSummaryPrice"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="@string/price_sample"/>
                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonNavigateToPayment"
            android:text="@string/pay"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/blue"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="15dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

    </LinearLayout>

</ScrollView>